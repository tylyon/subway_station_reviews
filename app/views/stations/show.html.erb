<iframe width="100%" height="150" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBmaUUgreBb8VainWXdk6ugZ3eroEoEeYw&q=<%= @station.latitude + "," + @station.longitude %>&zoom=18&maptype=satellite"></iframe>
<div class="ui card header description" style="
    position: absolute;
    right: 0;
    top: 124px;
    padding: .5% 0% .5% 2%;
    box-shadow: inset 5px 5px 4px rgba(255, 255, 255, 0), inset -5px -5px 4px rgba(247, 247, 247, 0.06);
    /* z-index: -1; */
    background: rgb(247, 247, 247);
    color: rgba(221, 211, 211, 0.25);
    text-shadow: 0px 0px 0px rgba(160, 149, 149, 0.25), 3px 1px 1px rgba(255, 255, 255, 1), 0px 0px 0px rgba(5, 4, 4, 0.22), 0px 0px 0px rgba(0, 0, 0, 0.05);
    font-size: large;
    border-radius: 2px;
border: solid 2px rgb(245, 244, 244)
">
<%= @station.name %>
<%= @station.address %>
</div>

<div>
  <% @station.station_images.each do |station_image| %>
  <%= image_tag(station_image.image.url, alt: station_image.description) %>
  <%= station_image.description %>
  <% end %>
</div>

<%= render partial: "reviews/show", locals: { station: @station } %>
<div class="ui card" style="width: 98%; margin: 1%;">
<div class="ui card" style="display: inline-block;
margin: 3%;
width: 94%;">
  <div class="ui label">Write a review for <%= @station.name %>!</div>
  <%= form_for [@station, @review], html: {class: "ui fluid form", style: "width: 96%; display: inline-block; padding: 0%; margin: 2%;"} do |f| %>
    <%= f.label :description %>
    <%= f.text_area :description, style: "margin-bottom: 1%;", placeholder: "Enter a description"%>
    <%= f.select(:rating, %w[1 2 3 4], {prompt: 'Rating'}, html: {class: "ui selection dropdown"}) %>
    <%= f.submit "Submit", class: "ui button", style: "margin-top: 1%;" %>
  <% end %>
</div>

<div class="ui card" style="margin: 3%;
width: 94%;">
  <div class="ui label">Upload a photo of <%= @station.name %>!</div>
  <%= form_for [@station, @image], html: {class: "ui fluid form", style: "width: 100%; padding: 3%; bottom: 0; top: 0; left: 0;"} do |f| %>
    <div class="field">
    <%= f.label :image, "Image" %>
    <%= f.file_field :image %>
    </div>
    <div class="field">
    <%= f.label :description, "Image Description" %>
    <%= f.text_field :description %>
    </div>
    <%= f.hidden_field :station_id, value: @station.id %>
    <%= f.submit "Add photo", class: "ui submit button" %>
  <% end %>
  </div>
</div>
</div>

<%= link_to "Delete", station_path(@station), method: :delete, data: { confirm: 'Are you sure?' } %>
