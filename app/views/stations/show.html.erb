<%= @station.name %>
<iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBmaUUgreBb8VainWXdk6ugZ3eroEoEeYw&q=<%= @station.latitude + "," + @station.longitude %>&zoom=18&maptype=satellite"></iframe>

<%= @station.address %>

<div>
  <% @station.station_images.each do |station_image| %>
  <%= image_tag(station_image.image.url, alt: station_image.description) %>
  <%= station_image.description %>
  <% end %>
</div>

<%= render partial: "reviews/show", locals: { station: @station } %>

<%= form_for [@station, @review] do |f| %>
<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>


<div>
  <%= f.label :rating %>
  <%= f.select(:rating, %w[1 2 3 4], {prompt: 'Rating'}) %>
</div>

<div>
  <%= f.submit "Submit" %>
</div>

<% end %>

<%= form_for [@station, @image] do |f| %>
<div>
  <%= f.label :image, "Image" %>
  <%= f.file_field :image %>
</div>

<div>
  <%= f.label :description, "Image Description" %>
  <%= f.text_field :description %>
</div>

<%= f.hidden_field :station_id, value: @station.id %>

<div>
  <%= f.submit "Add photo" %>
</div>

<% end %>

<%= link_to "Delete", station_path(@station), method: :delete, data: { confirm: 'Are you sure?' } %>
