<!DOCTYPE html>
<html>
<head>
  <title>SubwayStationReviews</title>
  <%= stylesheet_link_tag 'semantic.min', media: 'all' %>
  <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <li>
        <h1><a href="/">SubwayStationReviews</a></h1>
      </li>
    </ul>

    <section>
      <ul>
        <li>
          <%= form_tag(stations_path, method: "get") do %>
            <%= text_field_tag(:search, params[:search], placeholder: "Search Stations") %>
            <%= submit_tag("Search") %>
          <% end %>
        </li>
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li><%= link_to 'User Settings', edit_user_registration_path, method: :get %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div>
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'semantic.min' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).semantic();
    });
  <% end %>
  <%= yield :extra_footer %>
</body>
</html>
