<%= form_for [:admin, @station] do |f| %>
  <%if @station.errors.any? %>
    <ul>
      <% @station.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
  <%= label_tag "line_id", "Line" %>
    <%= select_tag "line_id", options_for_select(@lines.collect{ |l| [l.name, l.id] })%>
  </div>

    <%= f.submit 'Submit' %>
<% end %>
