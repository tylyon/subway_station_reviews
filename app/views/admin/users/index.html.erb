<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %>
      <%= button_to "Delete #{user.email}",
      admin_user_path(user),
      method: :delete,
      action: :destroy,
      data: { confirm: "Are you sure you want to delete this review?" }%>
      <% unless user.role == "admin" %>
        <%= button_to "Give admin privileges to #{user.email}",
        admin_user_path(user),
        method: :patch,
        action: :update,
        data: { confirm: "Are you sure you want to make this user an admin?" }%>
      <% end %>
    </li>
  <% end %>
</ul>
